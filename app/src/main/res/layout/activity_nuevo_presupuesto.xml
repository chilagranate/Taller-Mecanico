<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.NuevoPresupuestoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <androidx.cardview.widget.CardView

            android:id="@+id/cardview_datos_servicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="3dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:text="Nuevo presupuesto del servicio 1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="Cliente:" />

                <TextView
                    android:id="@+id/nuevo_presupuesto_cliente_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Martin Gilabert" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="VehÃ­culo:" />

                <TextView
                    android:id="@+id/nuevo_presupuesto_vehiculo_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Chevrolet Cruze" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="Patente:" />

                <TextView
                    android:id="@+id/nuevo_presupuesto_patente_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="AC809BG" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/nuevo_presupuesto_nueva_reparacion_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/nueva_reparaci_n"
            app:layout_constraintTop_toBottomOf="@+id/cardview_datos_servicio" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</ScrollView>